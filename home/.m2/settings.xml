<?xml version="1.0" encoding="UTF-8"?>
<settings xmlns="http://maven.apache.org/SETTINGS/1.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0 http://maven.apache.org/xsd/settings-1.0.0.xsd">

    <servers>
        <!-- Mobenga specific nexus -->
        <server>
            <id>nexus-deployment-repository</id>
            <username>admin</username>
            <password>admin123</password>
        </server>

        <server>
            <username>mobenga</username>
            <password>mobenga</password>
            <id>panbet-central</id>
        </server>

        <server>
            <username>mobenga</username>
            <password>mobenga</password>
            <id>panbet-snapshots</id>
        </server>
    </servers>

    <mirrors>
        <mirror>
            <id>nexus</id>
            <mirrorOf>*,!panbet-central,!panbet-snapshots</mirrorOf>
            <url>http://nexus.mobenga.net/nexus/content/groups/public</url>
        </mirror>		
    </mirrors>

    <profiles>
        <profile>
            <id>mobenga-repo-with-snapshots</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <repositories>
                <repository>
                    <id>snapshots-repo</id>
                    <url>http://nexus.mobenga.net/nexus/content/groups/public</url>
                    <releases><enabled>true</enabled></releases>
                    <snapshots>
                        <enabled>true</enabled>
                        <updatePolicy>always</updatePolicy>
                    </snapshots>
                </repository>
            </repositories>
            <pluginRepositories>
                <pluginRepository>
                    <id>snapshots-repo</id>
                    <url>http://nexus.mobenga.net/nexus/content/groups/public</url>
                    <releases><enabled>true</enabled></releases>
                    <snapshots>
                        <enabled>true</enabled>
                        <updatePolicy>always</updatePolicy>
                    </snapshots>
                </pluginRepository>
            </pluginRepositories>
        </profile>
    </profiles>
</settings>